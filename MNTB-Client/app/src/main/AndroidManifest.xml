<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ydlab.mntb_client">

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取WIFI网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".BmobApp"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.DialogueActivity_11" />
        <activity android:name=".activity.DialogueActivity_10" />
        <activity android:name=".activity.DialogueActivity_09" />
        <activity android:name=".activity.DialogueActivity_08" />
        <activity android:name=".activity.DialogueActivity_07" />
        <activity android:name=".activity.DialogueActivity_06" />
        <activity android:name=".activity.DialogueActivity_05" />
        <activity android:name=".activity.DialogueActivity_04" />
        <activity android:name=".activity.DialogueActivity_03" />
        <activity android:name=".activity.DialogueActivity_02" />
        <activity android:name=".activity.DialogueActivity_01" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 添加ContentProvider信息 -->
        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.ydlab.mntb_client.BmobContentProvider" />
    </application>

</manifest>
